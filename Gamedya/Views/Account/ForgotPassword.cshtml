@model Gamedya.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Şifrenizi mi Unuttunuz?";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="login-form11">
        <div class="panel-body" style="background-color:#000000;">


            @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary("", new { @class = "text-danger" })
                <h2 class="text-center">@ViewBag.Title</h2>
                <div class="form-group">

                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Mail Adresiniz" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-warning" value="Şifre Yenileme Linki Gönder" />
                    </div>
                </div>
            }
        </div>
    </div>

            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }
