@model Entites.Models.MessageModels.GamedyaMessage
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <div class="container">

        <div id="receiver" class="form-horizontal">
            @{
                if (ViewBag.Receiver != null)
                {
                    <h2>Mesaj gönderilecek kişi</h2>
                }
                else
                {
                    <h2>Mesaj gönderilecek kişiyi seçiniz</h2>
                }
            }
            <hr />
            <p class="text-danger">@ViewBag.Message </p>

            <div class="form-group">
                @Html.LabelFor(model => model.NewsUserId, "Alıcı", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @{
                        if (ViewBag.Receiver != null)
                        {
                                        <d>@ViewBag.Receiver</d>
                            <p hidden>
                                @Html.DropDownList("NewsUserId", null, htmlAttributes: new { @class = "form-control", id = "dropDown" })
                            </p>

                        }
                        else
                        {
                            @Html.DropDownList("NewsUserId", null, htmlAttributes: new { @class = "form-control", id = "dropDown" })

                        }
                    }

                    @Html.ValidationMessageFor(model => model.NewsUserId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button class="btn btn-default ileri">ileri </button>
                </div>

            </div>

        </div>



        @using (Html.BeginForm("Create", "Message", FormMethod.Post, new { role = "form" }))
        {
            @Html.AntiForgeryToken()

            <div id="messageContent" class="form-horizontal">


            </div>
        }
    </div>


@section scripts{
    <script src="~/Scripts/Message.js"></script>
}

