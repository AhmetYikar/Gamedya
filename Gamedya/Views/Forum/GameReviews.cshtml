@model IEnumerable<Gamedya.Models.ForumViewModel>
@using Gamedya.Helper

@{ Layout = "~/Views/Shared/_Layout.cshtml";}

    <div class="container">
        <div class="panel ">
            <div class="panel-heading panelinbasligi ">
                <a href="#"> <i class="fas fa-ghost"></i>OYUN GENEL </a>
            </div>
            <div style="margin-top:10px; text-align:center; ">

                <a class="btn btn-danger" href="@Url.Action("Create", "Forum")">Konu Aç </a>
            </div>
         
            <!-- panel start-->
            <div class="panel-body">
                <table class="table">
                    <tr>
                        <th>
                            Gönderenin ismi
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ForumTitle)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ViewCount)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Date)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.CategoryName)
                        </th>

                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>

                            <th>
                                <a href="@Url.Action("Details", "Forum",new {id=item.Id})"> @item.ForumUser </a>
                            </th>

                            <td>
                                <a href="@Url.Action("Details", "Forum",new {id=item.Id})">     @Html.DisplayFor(modelItem => item.ForumTitle) </a>
                            </td>

                            <td>
                                @item.ViewCount
                            </td>

                            <td>
                                <a href="@Url.Action("Details", "Forum",new {id=item.Id})">     @item.Date.ToShortDateString()</a>
                            <td>

                            <td>
                                <a href="@Url.Action("Details", "Forum",new {id=item.Id})">    @Html.DisplayFor(modelItem => item.CategoryName)</a>
                            </td>

                        </tr>
                    }

                </table>




            </div>
        </div>
    </div>