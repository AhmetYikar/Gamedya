@model Entites.Models.ForumModels.ForumPost



<div class="container">
    <div class="panel ">
        <div class="panel-heading panelinbasligi text-center">
            <a href="#"> <i class="fas fa-ghost"></i>FORUM KONUSU AÇ  </a>
        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

    <div style="margin-left:20px; margin-top:20px;">
               
        <div class="row" style="margin-bottom:20px;">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row" style="margin-bottom:20px;">
                <div class="form-group">
                    @Html.LabelFor(model => model.ForumCategoryId, "ForumCategoryId", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-12">
                     
                            @Html.HiddenFor(model => model.ForumCategoryId)
                            @ViewBag.ForumCategoryName
                       
                        @Html.ValidationMessageFor(model => model.ForumCategoryId, "", new { @class = "text-danger" })

                    </div>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.ForumTitle, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-12">
                    @Html.EditorFor(model => model.ForumTitle, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ForumTitle, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="row" style="margin-bottom:20px;">
            <div class="form-group">
                @Html.LabelFor(model => model.Content, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-12">
                    @Html.TextAreaFor(model => model.Content, new { @class = "ckeditor" })
                    @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
       
        <div class="row">
            <div class="form-group" style="margin-bottom:40px;">
                <div class="col-md-12 text-center">
                    <input type="submit" value="Oluştur" class="btn btn-danger btn-lg" />
                </div>
            </div>
        </div>
    </div>

        }
    </div>


</div>

<div class="container">
    @Html.ActionLink("Forma Geri Dön", "ForumHome")
</div>