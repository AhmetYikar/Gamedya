@model Gamedya.Models.ForumIndexViewModel


@{
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<div class="container">
    <div class="panel ">
        <div class="panel-heading panelinbasligi text-center ">
            <ul class="nav nav-tabs">
                <li class="nav-item">

                    <a class="nav-link active " data-toggle="tab" href="#tab-1">  <i class="fas fa-hourglass-end"></i> SON AÇILAN FORUMLAR </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="tab" href="#tab-2"> <i class="fas fa-comment-dots"></i> EN ÇOK CEVAPLANANLAR </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="tab" href="#tab-3"> <i class="fas fa-star"></i> POPÜLER</a>
                </li>
            </ul>
        </div>
        <!--panel title end-->
        <!--panel content-->
        <div class="panel-body">
            <div class="tab-content">
                <div class="tab-pane active" id="tab-1">
                    @Html.Action("LatestForums", "Forum")
                </div><!--tab-pane-->

                <div class="tab-pane" id="tab-2">
                    @Html.Action("MostCommented", "Forum")
                </div><!--tab-pane-->
                <div class="tab-pane" id="tab-3">
                    @Html.Action("Popular", "Forum")

                </div><!--tab-pane-->

            </div><!--tab-content-->
        </div>
        <!--panel content end-->
    </div>

</div>




    @for (int i = 0; i < Model.CategoryCount; i++)
{
    @Html.Action("ForumByCategory", "Forum",new {categoryId=Model.CategoryIds[i]})
}

