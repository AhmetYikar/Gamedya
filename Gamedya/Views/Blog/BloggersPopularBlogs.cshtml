@model IEnumerable<Gamedya.Models.BlogViewModel>


@foreach (var item in Model)
{
    <div class="media">
        <div class="media-left">
            <a href="@Url.Action("Details", "Blog",new {id=item.Id})"><img class="media-object" src="@item.TinyImagePath" alt="Generic placeholder image" style="height:60px"></a>
        </div><!--media-left-->
        <div class="media-body">
            <h4 class="media-heading"><a href="@Url.Action("Details", "Blog",new {id=item.Id})">@item.Title</a></h4>
            <span class="rating">
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
                <i class="fa fa-star-half-full"></i>
            </span>
        </div><!--media-body-->
    </div><!--media-->

}



