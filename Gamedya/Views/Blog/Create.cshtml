@model Entites.Models.BlogModels.BlogPost
@{
    ViewBag.Title = "Blog Yaz";
}
@using Gamedya.Helper;
<div class="container">
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">@ViewBag.Title</h3>
        </div>

        @using (Html.BeginForm("Create", "Blog", FormMethod.Post, new { enctype = "multipart/form-data", role = "form" }))
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="text-danger">
                @ViewBag.Message
            </div>
            <!-- form start -->
            <form role="form">
                <div class="box-body">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Summary, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.Summary, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Summary, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Content, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-12">
                            @Html.TextAreaFor(model => model.Content)
                            @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.BlogCategoryId, "Kategoriler", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-12">
                            @Html.DropDownList("BlogCategoryId", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.BlogCategoryId, "", new { @class = "text-danger" })
                        </div>
                    </div>



                    <div class="form-group">
                        @Html.LabelFor(model => model.TinyImagePath, "Resim Url", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.TinyImagePath, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TinyImagePath, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <br />
                    <br />

                    <div class="form-group">
                        <div class="col-md-10 text-center">
                            <div class="box-footer">
                                <input type="submit" value="Blog Oluştur" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
                </div>
            </form>

        }
    </div>

</div>
<div class="container">
    @Html.ActionLink("Bloglarım", "BloggerBlogs",new {userId=User.GetUserId()})


</div>





