@model  List<Entities.Models.Notification>
@using Gamedya.Helper
@{
    Layout = null;
}
<a href="#" class="dropdown-toggle" data-toggle="dropdown">
    <i class="fa fa-bell"></i>
    <span class="label label-warning">@ViewBag.unReadCount</span>
</a>
<ul class="dropdown-menu">
    @foreach (var item in Model)
    {
        <li>
            <a href="@Url.Action("Details","GameReview",new {id=item.NModuleId })">
                @Subs.Sub30(item.Content)

            </a>
        </li>
    }
    <li class="footer"><a href="@Url.Action("UserNotification", "Notification")">Bütün bildirimleri gör</a></li>
</ul>





