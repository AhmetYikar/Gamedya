@model IEnumerable<Entities.Models.TwitchYoutube.TwitchYoutube>

@{
    ViewBag.Title = "Yotube";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="box">
    <div class="box-header">
        <h3 class="box-title">@ViewBag.Title</h3>
    </div>
    <div>
        <p class="text-center">
            @Html.ActionLink("Yeni Youtube", "Create", "Youtube", null, new { @class = "btn btn-block btn-primary btn-sm" })
        </p>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
        <div id="example1_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
            <div id="example1_filter" class="dataTables_filter pull-right">
                <label>Arama:  <input type="search" class="form-control input-sm" placeholder="" aria-controls="example1"></label>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <table class="table table-bordered table-striped dataTable" role="grid" aria-describedby="example1_info">
                        <tr>


                            <th>
                                @Html.DisplayNameFor(model => model.CoverImage)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Title)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Date)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ViewCount)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.IsActive)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.VideoPlatform)
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <img src="@Html.DisplayFor(modelItem => item.CoverImage)" style="height:80px; width:80px;">
                                </td>
                                <td>
                                    @Subs.Sub30(item.Title)...
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Date)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ViewCount)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IsActive)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.VideoPlatform)
                                </td>
                                <td>
                                    @Html.ActionLink("Düzenle", "Edit", new { id = item.Id }) |
                                    @Html.ActionLink("Detaylar", "Details", new { id = item.Id }) |
                                    @Html.ActionLink("Sil", "Delete", new { id = item.Id })
                                </td>
                            </tr>
                        }
                        <tr>


                            <th>
                                @Html.DisplayNameFor(model => model.CoverImage)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Title)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Date)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ViewCount)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.IsActive)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.VideoPlatform)
                            </th>
                            <th></th>
                        </tr>

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>