@model Entites.Models.NewsModels.News
@using GameAdmin.Helper
@{
    ViewBag.Title = "Haber Detayları";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="box box-primary">
    <div class="box-body box-profile">
        <h3 class="profile-username text-center">@ViewBag.Title</h3>

        <dt>
            @Html.DisplayNameFor(model => model.TinyImagePath)
        </dt>

        <dd>
            <img src="@Html.DisplayFor(model => model.TinyImagePath)" style="height:100px">
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.NewsImages)
        </dt>
        @foreach (var item in Model.NewsImages)
        {
            <dd>
                <img src="@item.ImagePath" style="height:100px">
            </dd>
        }


        @if (Model.NewsVideos.Count() > 0)
        {
            <dt>
                @Html.DisplayNameFor(model => model.NewsVideos)
            </dt>
            foreach (var item in Model.NewsVideos)
            {
                <dd>
                    <iframe src="@item.VideoPath"></iframe>
                </dd>
            }

        }



        <ul class="list-group list-group-unbordered">

            <li class="list-group-item">
                <dt>
                    @Html.DisplayNameFor(model => model.NewsCategory.CategoryName)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.NewsCategory.CategoryName)
                </dd>
            </li>
            <li class="list-group-item">
                <dt>
                    @Html.DisplayNameFor(model => model.NewsPlatform)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.NewsPlatform)
                </dd>
            </li>
            <li class="list-group-item">
                <dt>
                    @Html.DisplayNameFor(model => model.Title)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Title)
                </dd>

            </li>
            <li class="list-group-item">
                <dt>
                    @Html.DisplayNameFor(model => model.Summary)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Summary)
                </dd>
            </li>

            <li class="list-group-item">
                <dt>
                    @Html.DisplayNameFor(model => model.Content)
                </dt>

                <dd>
                    @Html.Raw(Model.Content)
                </dd>

            </li>

            <li class="list-group-item">
                <dt>
                    @Html.DisplayNameFor(model => model.Date)
                </dt>

                <dd>
                    @Model.Date.ToString()
                </dd>

            </li>
            <li class="list-group-item">

                <dt>
                    @Html.DisplayNameFor(model => model.EditDate)
                </dt>

                <dd>
                    @Model.EditDate.ToString()
                </dd>
            </li>

            <li class="list-group-item">
                <dt>
                    @Html.DisplayNameFor(model => model.IsActive)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.IsActive)
                </dd>
            </li>

            <li class="list-group-item">
                <dt>
                    @Html.DisplayNameFor(model => model.ViewCount)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ViewCount)
                </dd>
            </li>
        </ul>
    </div>

</div>
@if (Model.NewsComments != null && Model.NewsComments.Count() > 0)
{
    <a href="@Url.Action("Index", "NewsComments", new { id = Model.Id})">Haber Yorumları</a>
    <span class="label label-primary">@Model.NewsComments.Count().ToString()</span><d> |</d>
}
else
{<d>Haber Yorumları |</d>}
@Html.ActionLink("Düzenle", "Edit", new { id = Model.Id }) |
@Html.ActionLink("Listeye Dön", "Index") |
