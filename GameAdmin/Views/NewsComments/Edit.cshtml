@model Entites.Models.NewsModels.NewsComment

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>NewsComment</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

       

        <div class="form-group">
            @Html.LabelFor(model => model.Content, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Model.Content
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IsOk, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.IsOk)
                    @Html.ValidationMessageFor(model => model.IsOk, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NewsId, "NewsId", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Model.NewsId
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NewsUserId, "NewsUserId", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Model.NewsUserId
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    <a href="@Url.Action("Index", "NewsComments", new { id = Model.NewsId})">Back To List</a>
</div>
