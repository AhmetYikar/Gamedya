@model IEnumerable<Entites.Models.NewsModels.NewsComment>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*Aşağıdaki tablonun "tr" tagleri alttaki scriptle ilişkilidir. Değişiklik yaparken dikkat ediniz*@


<div class="box">
    <div class="box-header">
        <h3 class="box-title">Onay Bekleyen Haber Yorumları</h3>
    </div>

    <!-- /.box-header -->
    <div class="box-body">
        <div id="example1_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">

            <div class="row">
                <div class="col-sm-12">
                    <table id="example1" class="table table-bordered table-striped dataTable" role="grid" aria-describedby="example1_info">
                        <thead>
                            <tr>
                                <th>
                                    Yorum sahibi
                                </th>
                                <th>
                                    Yorum içeriği
                                </th>
                                <th>
                                    Tarih
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="@item.Id">

                                    <td>
                                        @Html.DisplayFor(modelItem => item.GuestName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Content)
                                    </td>

                                    <td>
                                        @item.Date.ToString()
                                    </td>

                                    <td>
                                        @{string failDivId = "failMessage" + item.Id;
                                            string successDivId = "successMessage" + item.Id;
                                        }
                                        <a class="btn btn-success" onclick="ApproveComment(@item.Id)"> Onayla</a>
                                        <a class="btn btn-danger" onclick="Delete(@item.Id)"> Sil</a>

                                        <div id="@successDivId" style="color:green"></div>
                                        <div id="@failDivId" style="color:red"></div>

                                    </td>

                                </tr>
                            }
                        </tbody>
                        <tfoot>
                        <tfoot>
                            <tr>
                                <th>
                                    Yorum sahibi
                                </th>
                                <th>
                                    Yorum içeriği
                                </th>
                                <th>
                                    Tarih
                                </th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/NewsCommentScripts.js"></script>
