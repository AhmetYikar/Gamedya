@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole

@{
    ViewBag.Title = "Rol Sil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="box box-primary">
    <div class="box-body box-profile">
        <h3 class="profile-username text-center">@ViewBag.Title</h3>
        <p class="text-muted text-center text-danger">Rolü SİLMEK İSTEDİĞİNİZE EMİN MİSİNİZ?</p>
        <ul class="list-group list-group-unbordered">
            <li class="list-group-item">
                <dt>
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <hr />
                <dd>
                    @Html.DisplayFor(model => model.Name)
                </dd>
            </li>
        </ul>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Sil" class="btn btn-primary btn-block" />
            </div>
        }
    </div>
</div>
@Html.ActionLink("Listeye Dön", "Index")
