@model GameAdmin.Models.ForgotPasswordViewModel
@{
    Layout = null;

    if (User.IsInRole("Admin"))
    {

    }
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <h2>@ViewBag.Title.</h2>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.7 -->
    <link rel="stylesheet" href="~/Assest/bower_components/bootstrap/dist/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Assest/bower_components/font-awesome/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="~/Assest/bower_components/Ionicons/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Assest/dist/css/AdminLTE.min.css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- Google Font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
</head>
<body class="hold-transition lockscreen">
    <!-- Automatic element centering -->
    <div class="lockscreen-wrapper">
        <div class="lockscreen-logo">
            <a href="#"><b>Şifremi</b> Unuttum</a>
        </div>

        <!-- START LOCK SCREEN ITEM -->
        <div class="lockscreen-item">
            <!-- lockscreen image -->
            <div class="lockscreen-image">
                <img src="~/Images/GAMEDYA.jpg" alt="Logo">
            </div>
            <!-- /.lockscreen-image -->
            <!-- lockscreen credentials (contains the form) -->

            @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "lockscreen-credentials", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="input-group">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Mail Adresiniz" })
                    <div class="input-group-btn">
                        <button type="submit" class="btn"><i class="fa fa-arrow-right text-muted"></i></button>
                        @*<input type="submit" class="btn btn-default" value="Email Link" />*@
                    </div>

                </div>
            }
        </div>
        <!-- /.lockscreen-item -->
        <div class="help-block text-center">
            Mail Adresinizi Giriniz.
        </div>
        <div class="text-center">
            <a href="@Url.Action("Login","Account")">Giriş Sayfasına Dönmek İçin Tıklayın</a>
        </div>

    </div>
    <!-- /.center -->
    <!-- jQuery 3 -->
    <script src="~/Assest/bower_components/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap 3.3.7 -->
    <script src=".~/Assest/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
</body>
</html>




