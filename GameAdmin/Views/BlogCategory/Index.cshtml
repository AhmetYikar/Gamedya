@model IEnumerable<Entites.Models.BlogModels.BlogCategory>

@{
    ViewBag.Title = "Blog Kategorileri";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="box">
    <div class="box-header">
        <h3 class="box-title">@ViewBag.Title</h3>
    </div>
    <div>
        <p class="text-center">
            @Html.ActionLink("Yeni Blog Kategorisi", "Create", "BlogCategory", null, new { @class = "btn btn-block btn-primary btn-sm" })
        </p>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
        <div id="example1_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
            <div id="example1_filter" class="dataTables_filter pull-right">
                <label>Arama:  <input type="search" class="form-control input-sm" placeholder="" aria-controls="example1"></label>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <table id="example1" class="table table-bordered table-striped dataTable" role="grid" aria-describedby="example1_info">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.CategoryName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.First().Description)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.First().ParentId)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CategoryName)
                                    </td>
                                    <th>
                                        @Html.DisplayFor(modelItem => item.Description)
                                    </th>
                                    <th>
                                        @Html.DisplayFor(modelItem => item.ParentId)
                                    </th>

                                    <td>
                                        @Html.ActionLink("Düzenle", "Edit", new { id = item.Id }) |
                                        @Html.ActionLink("Detaylar", "Details", new { id = item.Id }) |
                                        @Html.ActionLink("Sil", "Delete", new { id = item.Id })
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                        <tfoot>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.CategoryName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Description)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ParentId)
                                </th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>