@model Entites.Models.GameModels.GameUpdate

@{
    <title> Admin| GameReview Create </title>
}
@using GameAdmin.Helper



<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">
            Oyun İncelemesi Ekle
        </h3>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="text-danger">
            @ViewBag.Message
        </div>
        <!-- form start -->
        <form role="form">
            <div class="box-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Content, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-12">
                        @Html.TextAreaFor(model => model.Content, new { @class = "ckeditor" })
                        @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.GameId, "GameId", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-12">
                        @Html.DropDownList("GameId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.GameId, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.ArticleType, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-12">
                        @Html.EnumDropDownListFor(model => model.ArticleType, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ArticleType, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10" style="margin-top:10px;">
                        <input type="submit" value="Game Review Oluştur" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </form>
    }
</div>

@Html.ActionLink("Listeye Geri Dön", "Index")




@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}




