                <i class="ion ion-pie-graph"></i>
            </div>
            <a href=@Url.Action("Index", "NewsCategory") class="small-box-footer">Detaylı bilgi <i class="fa fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <!-- ./col -->
    <!-- ./col -->
