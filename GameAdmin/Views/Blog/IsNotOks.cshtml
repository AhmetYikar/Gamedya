@model IEnumerable<GameAdmin.Models.BlogViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="box">
    <div class="box-header">
        <h3 class="box-title">Onay Bekleyen Bloglar</h3>
    </div>
  
    <!-- /.box-header -->
    <div class="box-body">
        <div id="example1_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
           
            <div class="row">
                <div class="col-sm-12">
                    <table id="example1" class="table table-bordered table-striped dataTable" role="grid" aria-describedby="example1_info">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.First().TinyImagePath)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.First().Title)
                                </th>                               
                                <th>
                                    @Html.DisplayNameFor(model => model.First().Date)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="@Html.DisplayFor(modelItem => item.TinyImagePath)" style="height:80px;">
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Title)
                                    </td>
                                    
                                    <td>
                                        @item.Date.ToString()
                                    </td>

                                    <td>                                      
                                       
                                        @Html.ActionLink("Onay vermek için detaya git", "Details", new { id = item.Id })
                                       
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                        <tfoot>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.First().TinyImagePath)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.First().Title)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.First().Date)
                                </th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>       
    </div>
</div>