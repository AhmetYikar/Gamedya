@model IEnumerable<Entites.Models.MessageModels.GamedyaMessage>

@{
    ViewBag.Title = "Index";
}


<div class="box">
    <div class="box-header">
        <h3 class="box-title">@ViewBag.Title</h3>
    </div>
    <div>
        <p class="text-center">
            @Html.ActionLink("Yeni Mesaj", "Create", "Message", null, new { @class = "btn btn-block btn-primary btn-sm" })
        </p>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
        <div id="example1_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
            <div id="example1_filter" class="dataTables_filter pull-right">
                <label>Arama:  <input type="search" class="form-control input-sm" placeholder="" aria-controls="example1"></label>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <table class="table">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Date)
                            </th>
                            <th>
                                Alıcı adı
                            </th>
                            <th>
                                Gönderen adı
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.Content)
                            </th>

                            <th>
                                Okunmuş mu?
                            </th>

                            <th>
                                Alıcı silmiş mi?
                            </th>
                            <th>
                                Gönderen silmiş mi?
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Date)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ReceiverName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SenderName)
                                </td>
                                <td>
                                    @*substring 30 karakter için helperdeki metodumuz*@
                                    @Subs.Sub30(item.Content);
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.IsRead)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.ReceiverDel)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SenderDel)
                                </td>
                                <td>
                                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                </td>
                            </tr>
                        }

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
