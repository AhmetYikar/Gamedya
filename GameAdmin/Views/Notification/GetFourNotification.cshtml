@model List<Entities.Models.Notification>

<a href="#" class="dropdown-toggle" data-toggle="dropdown">
    <i class="fa fa-bell"></i>
    <span class="label label-success">@Model.Count()</span>
</a>
<ul class="dropdown-menu">
    @for(int i=0; i<4; i++)
    {
    <li>
        
            <a href="@Url.Action("Details","GameReview",new {id=Model[i].NModuleId })">
                @Model[i].Content

            </a>
        </li>
    }
    <li class="footer"><a href="@Url.Action("UserNotification", "Notification")">Bütün bildirimleri gör</a></li>
</ul>




